@using MudBlazor
@inject IJSRuntime JS

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary" Dense="true">
        <MudSwitch @bind-Value="isDarkMode" Color="Color.Default" Class="mx-2" />
        <MudIcon Icon="@(isDarkMode ? Icons.Material.Filled.DarkMode : Icons.Material.Filled.LightMode)" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.End" OnClick="@ToggleNavMenu" />
    </MudAppBar>

    <MudDrawer @bind-Open="drawerOpen" ClipMode="DrawerClipMode.Never" Variant="DrawerVariant.Temporary" Elevation="1" Anchor="Anchor.Right">
        <MudNavMenu>
            <MudNavLink Href="dispenses" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.School">Dispenses</MudNavLink>
            <MudNavLink Href="règles" Icon="@Icons.Material.Filled.Favorite">Règles</MudNavLink>
            <MudNavLink Href="bobo" Icon="@Icons.Material.Filled.MedicalServices">Bobo</MudNavLink>
            <MudNavLink Href="pai" Icon="@Icons.Material.Filled.Article">PAI</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
</MudLayout>

<MudThemeProvider @bind-IsDarkMode="isDarkMode" />
